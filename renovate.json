{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for Fyrre ViteJS project",
  "extends": [
    "config:recommended",
    ":enableVulnerabilityAlertsWithLabel(security)"
  ],
  "timezone": "Europe/Berlin",
  "schedule": [],
  "baseBranches": [
    "master"
  ],
  "enabledManagers": [
    "npm"
  ],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "prCreation": "immediate",
  "prConcurrentLimit": 100,
  "prHourlyLimit": 14,
  "branchPrefix": "renovate/",
  "labels": [
    "dependencies",
    "renovate"
  ],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "platformAutomerge": false,
  "requiredStatusChecks": [],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "priority-high"
    ],
    "schedule": "at any time",
    "assignees": [],
    "reviewers": []
  },
  "packageRules": [
    {
      "description": "Group ALL dependencies into a single PR (including major updates)",
      "groupName": "All Dependencies",
      "matchPackagePatterns": [
        ".*"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "automerge": false,
      "requiredStatusChecks": []
    },
    {
      "description": "Pin Node.js version",
      "matchPackageNames": [
        "node"
      ],
      "enabled": false
    },
    {
      "description": "Ignore passport-saml critical vulnerability for now (separate ticket)",
      "matchPackageNames": [
        "passport-saml"
      ],
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "prBodyDefinitions": {
    "Notes": "⚠️ This PR was automatically created by Renovate Bot"
  },
  "prBodyColumns": [
    "Package",
    "Change",
    "Age",
    "Adoption",
    "Passing",
    "Confidence"
  ],
  "prBodyNotes": [
    "Automated tests will run to verify these changes",
    "Please review the changes carefully before merging",
    "This PR runs weekly on Sundays at 6am (Europe/Berlin time)"
  ],
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "ignoreDeps": [],
  "ignorePresets": [],
  "osvVulnerabilityAlerts": true
}