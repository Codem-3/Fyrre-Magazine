{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for Fyrre ViteJS project",
  "extends": [
    "config:recommended",
    ":enableVulnerabilityAlertsWithLabel(security)"
  ],
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 6am on Sunday"
  ],
  "scheduleAutomerge": "before 6am on Sunday",
  "ignoreSchedule": [
    "{{#if (containsString body 'manual')}}true{{else}}false{{/if}}"
  ],
  "baseBranches": [
    "master"
  ],
  "enabledManagers": [
    "npm"
  ],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "prCreation": "immediate",
  "prConcurrentLimit": 5,
  "branchPrefix": "renovate/",
  "labels": [
    "dependencies",
    "renovate"
  ],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "platformAutomerge": true,
  "requiredStatusChecks": [],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "priority-high"
    ],
    "schedule": "at any time"
  },
  "packageRules": [
    {
      "description": "Group all React packages together",
      "groupName": "React",
      "matchPackagePatterns": [
        "^react",
        "^@types/react"
      ]
    },
    {
      "description": "Group all Vite packages together",
      "groupName": "Vite",
      "matchPackagePatterns": [
        "^vite",
        "^@vitejs/"
      ]
    },
    {
      "description": "Group ESLint packages together",
      "groupName": "ESLint",
      "matchPackagePatterns": [
        "^@eslint/",
        "^eslint",
        "^eslint-plugin-"
      ]
    },
    {
      "description": "Group Tailwind CSS packages together",
      "groupName": "Tailwind CSS",
      "matchPackagePatterns": [
        "^tailwindcss",
        "^autoprefixer",
        "^postcss"
      ]
    },
    {
      "description": "Group TypeScript packages together",
      "groupName": "TypeScript",
      "matchPackagePatterns": [
        "^@types/"
      ]
    },
    {
      "description": "Automerge patch and minor updates for non-major dependencies",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": []
    },
    {
      "description": "Separate PR for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": null,
      "labels": [
        "dependencies",
        "major-update"
      ]
    },
    {
      "description": "Pin Node.js version",
      "matchPackageNames": [
        "node"
      ],
      "enabled": false
    },
    {
      "description": "Ignore passport-saml critical vulnerability for now (separate ticket)",
      "matchPackageNames": [
        "passport-saml"
      ],
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 6am on Sunday"
    ]
  },
  "prBodyDefinitions": {
    "Notes": "⚠️ This PR was automatically created by Renovate Bot"
  },
  "prBodyColumns": [
    "Package",
    "Change",
    "Age",
    "Adoption",
    "Passing",
    "Confidence"
  ],
  "prBodyNotes": [
    "Automated tests will run to verify these changes",
    "Please review the changes carefully before merging",
    "This PR runs weekly on Sundays at 6am (Europe/Berlin time)"
  ],
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "ignoreDeps": [],
  "ignorePresets": [],
  "osvVulnerabilityAlerts": true
}